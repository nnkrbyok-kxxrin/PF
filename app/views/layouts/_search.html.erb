<%= form_with url: search_path, method: :get, class: 'd-flex', type: 'search', placeholder: '検索', 'aria-label': 'Search', local: true do |f| %>
  <%= f.text_field :content, class: 'search-form-in mr-1' %>
  <%= f.select :model, options_for_select({ 'Number' => 'number', 'Name' => 'name' }), {}, { class: 'form-select search-select mr-1' } %>
  <%= f.select :method, options_for_select({ 'Perfect' => 'perfect', 'Forward' => 'forward', 'Backward' => 'backward', 'Partial' => 'partial' }), {}, { class: 'form-select search-select mr-1' } %>
  <%= f.submit 'Search', class: 'btn btn-outline-secondary' %>
<% end %>