<!DOCTYPE html>
<html>
  <head>
    <title>ThanksCollection</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <div>
          <%= link_to "Thanks Collection", root_path, class: 'navbar-brand' %>
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "home", guests_path, class: 'nav-link active' %>
                </li>
                <li class="nav-item">
                  <%= link_to "sign-out", destroy_admin_session_path, method: :delete, class: 'nav-link' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "sign-up", new_admin_registration_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "sign-in", new_admin_session_path, class: 'nav-link' %>
                </li>
              <% end %>
            </ul>
            <% if admin_signed_in? %>
              <%= render 'layouts/search' %>
            <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>