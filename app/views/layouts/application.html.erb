<!DOCTYPE html>
<html>
  <head>
    <meta charset='UTF-8' />
      <title>ThanksCollection</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

      <link href='https://use.fontawesome.com/releases/v5.6.1/css/all.css' rel='stylesheet'>

      <!--トップページ用フォント-->
      <link rel='preconnect' href='https://fonts.gstatic.com'>
      <link href='https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap' rel='stylesheet'>

      <!--その他ページフォント-->
      <link rel='preconnect' href='https://fonts.gstatic.com'>
      <link href='https://fonts.googleapis.com/css2?family=Caveat:wght@700&family=Noto+Sans+JP:wght@500&display=swap' rel='stylesheet'>

      <!--application.jsの記述と重複するため、下記は不要-->
      <script src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>

      <!--Gem FullCalender css-->
      <!--<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.css'>-->
      <!--<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.min.css'>-->
  </head>

  <body>
    <div class='wrapper'>

      <header>
        <nav class='navbar navbar-expand-lg navbar-light bg-light text-font'>
          <div class='container-fluid'>
            <div>
              <%= link_to 'Thanks Collection', root_path, class: 'navbar-brand' %>
            </div>
            <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
              <span class='navbar-toggler-icon'></span>
            </button>
              <div class='collapse navbar-collapse justify-content-between' id='navbarSupportedContent'>
                <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
                  <% if admin_signed_in? %>
                    <li class='nav-item'>
                      <%= link_to 'Home', guests_path, class: 'nav-link' %>
                    </li>
                    <li class='nav-item'>
                      <%= link_to 'Schedule', events_path, class: 'nav-link' %>
                    </li>
                    <li class='nav-item'>
                      <%= link_to 'New', new_guest_path, method: :get, class: 'nav-link' %>
                    </li>
                    <li class='nav-item'>
                      <%= link_to 'Sign-out', destroy_admin_session_path, method: :delete, class: 'nav-link' %>
                    </li>
                  <% else %>
                    <li class='nav-item'>
                      <%= link_to 'Home', root_path, class: 'nav-link' %>
                    </li>
                    <li class='nav-item'>
                      <%= link_to 'About', about_path, class: 'nav-link' %>
                    </li>
                    <li class='nav-item'>
                      <%= link_to 'Sign-up', new_admin_registration_path, class: 'nav-link' %>
                    </li>
                    <li class='nav-item'>
                      <%= link_to 'Sign-in', new_admin_session_path, class: 'nav-link' %>
                    </li>
                  <% end %>
                </ul>
                <% if admin_signed_in? %>
                  <%= render 'layouts/search' %>
                <% end %>
              </div>
          </div>
        </nav>
      </header>

      <div class='main'>
        <%= yield %>
        <footer>
    		  © Thanks Collection
        </footer>
      </div>

    </div>
  </body>
</html>