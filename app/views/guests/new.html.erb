<div class='background text-font'>
  <div class='container'>
    <div class='row py-5'>

      <div class='col-md-2'></div>

      <div class='col-md-8 py-4 box-background'>

        <% if @guest.errors.any? %>
          <div>
            <ul style='errors-message'>
              <% @guest.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          ※は入力必須項目です！

          <%= form_with model: @guest, local: true do |f| %>
            <div class='my-3'>
              <label class='form-label'>Number</label>
              <%= f.text_field :number, placeholder: '※カルテ番号（数字以外も入力可能）', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Name</label>
              <%= f.text_field :name, placeholder: '※名前', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Name-Kana</label>
              <%= f.text_field :name_kana, placeholder: '※ふりがな', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Phone Number</label>
              <%= f.text_field :phone_number, placeholder: '※電話番号', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Street Address</label>
              <%= f.text_area :address, placeholder: '住所（改行入力可能）', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Birthday</label>
              <%= f.text_field :birthday, placeholder: '生年月日', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Sex</label>
              <%= f.text_field :sex, placeholder: '※性別', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Allergies</label>
              <%= f.text_area :allergie, placeholder: 'アレルギー（改行入力可能）', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Profession</label>
              <%= f.text_area :profession, placeholder: '職業（改行入力可能）', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Date and Time</label>
              <%= f.text_field :date_and_time, placeholder: '※初回日時', class: 'form-control mb-4' %>
            </div>
            <%= f.submit 'Create!', class: 'w-100 btn btn-secondary' %>
          <% end %>

      </div>

    </div>
  </div>
</div>