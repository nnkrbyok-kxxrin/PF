<div class="background text-font">
  <div class="container">
    <div class="row">

      <div class="table table-light task-table mt-5 mb-3">
        <div class="task mx-3 my-3">
          <h4><i class="fas fa-star-and-crescent"></i> <i class="fas fa-sun"></i> Only one <%= link_to "go", about_path, class: "go-link" %>al for today!</h4></br>
          <% @tasks.each do |task| %>
          <%= task.body %>
            <% if task.admin == current_admin %>
              <!--%= "　" %>-->
              <%= link_to task_path(task,task), method: :delete do %>
              <i class='fas fa-check-circle fa-lg icon-link'></i>
              <% end %>
            <% end %>
          <% end %>
        </div>

            <%= form_with model: @task_new, local: true, url: tasks_path(@task), method: :post do |f| %>
            <!--%= form_with model: @task_new, url: tasks_path(@task), method: :post, class: 'form-control mb-3', local: true do |f| %>-->
        </div>
              <%= f.text_field :body, rows:'5',placeholder: "", class: "form-control" %>
            <%= f.submit "Try!", class: 'w-100 btn btn-secondary mt-2 mb-3' %>
            <% end %>


      <table class="table table-light table-hover table-customize">
        <thead>
          <tr>
            <th scope="col">Check</th>
            <th scope="col">Guest Number</th>
            <th scope="col">Guest Name</th>
          </tr>
        </thead>
        <tbody>
          <% @guests.each do |guest| %>
          <tr>
            <th scope="row">
              <span id="bookmarks_buttons_<%= guest.id %>">
              <!--上記のguest.idはeach文のguestとは別物でjsへ渡すためのもの-->
              <%= render 'bookmarks/bookmark-btn', guest: guest %>
              </span>
            </th>
            <td>No.<%= guest.number %></td>
            <td><%= link_to guest.name, guest_path(guest.id), class: "name-link" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

        <div class="mx-auto mt-4">
          <%= paginate @guests %>
        </div>

    </div>
  </div>
</div>