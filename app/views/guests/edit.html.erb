<div class='background text-font'>
  <div class='container'>
    <div class='row py-5'>

      <div class='col-md-2'></div>

      <div class='col-md-8 py-4 box-background'>

        <% if @guest.errors.any? %>
          <div>
            <ul style='errors-message'>
              <% @guest.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          <%= link_to guest_path(@guest), class: 'fas fa-angle-double-left fa-2x icon-link mb-2', local: true do %>
          <% end %>

          <%= form_with model: @guest, local:true do |f| %>
          <div class='mb-3'>
            <label for='formGroupExampleInput' class='form-label'>Number</label>
            <%= f.text_field :number, id:'inputNumber', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Name</label>
            <%= f.text_field :name, id:'inputName', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Name-Kana</label>
            <%= f.text_field :name_kana, id:'inputName_Kana', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Phone Number</label>
            <%= f.text_field :phone_number, id:'inputPhone_Number', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Street Address</label>
            <%= f.text_field :address, id:'inputAddress', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Birthday</label>
            <%= f.text_field :birthday, id:'inputBirthday', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Sex</label>
            <%= f.text_field :sex, id:'inputSex', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Allergies</label>
            <%= f.text_field :allergie, id:'inputAllergie', placeholder: '', class: 'form-control mb-3' %>
          </div>
          <div class='mb-3'>
            <label for='formGroupExampleInput2' class='form-label'>Profession</label>
            <%= f.text_field :profession, id:'inputProfession', placeholder: '', class: 'form-control mb-4' %>
          </div>
          <%= f.submit 'Update!', class: 'w-100 btn btn-secondary' %>
          <% end %>

      </div>

    </div>
  </div>
</div>