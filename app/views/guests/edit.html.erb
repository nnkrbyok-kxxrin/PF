<div class='background text-font'>
  <div class='container'>
    <div class='row py-5'>

      <div class='col-md-2'></div>

      <div class='col-md-8 py-4 box-background'>

        <% if @guest.errors.any? %>
          <div>
            <ul style='errors-message'>
              <% @guest.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          <%= link_to guest_path(@guest), class: 'fas fa-angle-double-left fa-2x icon-link mb-2', local: true do %>
          <% end %>

          <%= form_with model: @guest, local: true do |f| %>
            <div class='mb-3'>
              <label class='form-label'>Number</label>
              <%= f.text_field :number, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Name</label>
              <%= f.text_field :name, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Name-Kana</label>
              <%= f.text_field :name_kana, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Phone Number</label>
              <%= f.text_field :phone_number, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Street Address</label>
              <%= f.text_area :address, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Birthday</label>
              <%= f.text_field :birthday, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Sex</label>
              <%= f.text_field :sex, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Allergies</label>
              <%= f.text_area :allergie, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Profession</label>
              <%= f.text_area :profession, placeholder: '', class: 'form-control mb-3' %>
            </div>
            <div class='mb-3'>
              <label class='form-label'>Date and Time</label>
              <%= f.text_field :date_and_time, placeholder: '', class: 'form-control mb-4' %>
            </div>
            <%= f.submit 'Update!', class: 'w-100 btn btn-secondary' %>
          <% end %>

      </div>

    </div>
  </div>
</div>